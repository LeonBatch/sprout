{% extends "sprout-module-mailer/_layouts/preview" %}

{% block previewBody %}

    {% set previewUrl = actionUrl('sprout-module-mailer/preview/share-email?emailId='~email.id) %}

    <section class="email-preview-pane email-preview-html active">
        <iframe id="preview-html" src="{{ previewUrl }}"></iframe>
    </section>

    <section class="email-preview-pane email-preview-text">
        <iframe id="preview-text" src="{{ previewUrl }}&type=text"></iframe>
    </section>

{% endblock %}

