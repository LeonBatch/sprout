{% import "_includes/forms" as forms %}

<td colspan="2">
    {% include "sprout-module-sitemaps/_sitemaps/titlecolumn" with {
        sitemapMetadata: customSection,
        isCustom: true,
    } only %}

    {{ hiddenInput('sitemaps['~customPageSourceKey~'][id]', customSection.id) }}
    {{ hiddenInput('sitemaps['~customPageSourceKey~'][uri]', customSection.uri, {
        class: 'sitemap-metadata-uri',
    }) }}
</td>
<td>
    {{ forms.selectField({
        name: 'sitemaps[' ~ customPageSourceKey ~ '][priority]',
        options: priorityList,
        value: customSection.priority,
        class: 'sitemap-priority',
        errors: "",
        required: false
    }) }}
</td>
<td>
    {{ forms.selectField({
        name: 'sitemaps[' ~ customPageSourceKey ~ '][changeFrequency]',
        options: frequencyList,
        value: customSection.changeFrequency,
        class: 'sitemap-change-frequency',
        errors: "",
        required: false
    }) }}
</td>
<td class="enabled-status" style="text-align: center;">
    {{ forms.lightswitch({
        name: 'sitemaps[' ~ customPageSourceKey ~ '][enabled]',
        on: customSection.enabled == 1 ?? false
    }) }}
</td>
<td>
    <a class="delete icon" title="Delete"></a>
</td>
