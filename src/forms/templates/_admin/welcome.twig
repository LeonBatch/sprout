{% extends "sprout-module-core/_layouts/landing" %}
{% import "sprout-module-core/_macros/sproutcp" as sproutCp %}

{% set title = "Welcome to Sprout Forms"|t('sprout-module-forms') %}
{% set bodyClass = 'sprout-landing-page' %}

{% block content %}

    <div class="sprout-landing">

        {{ parent() }}

        {{ sproutCp.featureHeader({
            heading: "Simple, Beautiful Forms. 100% control."|t('sprout-module-forms'),
            message: "Sprout Forms makes it easy for content authors to manage complex forms while also giving a wonderful amount of control to designers and developers."|t('sprout-module-forms'),
            primaryButtonText: "Get Started"|t('sprout-module-forms'),
            primaryButtonLink: cpUrl('sprout/forms'),
            secondaryButtonText: "Read the Docs"|t('sprout-module-forms'),
            secondaryButtonLink: "https://sprout.barrelstrengthdesign.com/docs/forms"
        }) }}

        {{ sproutCp.featureImage({
            imageUrl: sproutAssetUrl('forms/screenshots/feature-formbuilder-toboldlygo.png'),
            altText: 'Sprout Forms Form Builder for Craft CMS'|t('sprout-module-forms')
        }) }}

    </div>
{% endblock %}
